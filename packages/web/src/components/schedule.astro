---
import entries from 'lodash/fp/entries'
import compose from 'lodash/fp/compose'
import flatten from 'lodash/fp/flatten'
import groupBy from 'lodash/fp/groupBy'
import {
  type ScheduleDetail,
  type ScheduledGame,
  fallbackIcon,
} from '@statmuse/core/gamera'
import EntityLink from '@components/entity-link.astro'
import Image from '@components/image.astro'

interface Props {
  league: string
  detail: ScheduleDetail
}

const league = Astro.props.league.toLowerCase()
const detail = Astro.props.detail
const groupGames = compose(entries, groupBy('date'))

type ScheduledGameWithType = ScheduledGame & {
  type: 'completed' | 'inProgress' | 'scheduled'
}

const gamesByDate: [string, ScheduledGameWithType[]][] = groupGames(
  flatten([
    detail.completed.map((d) => ({ ...d, type: 'completed' })),
    detail.inProgress.map((d) => ({ ...d, type: 'inProgress' })),
    detail.scheduled.map((d) => ({ ...d, type: 'scheduled' })),
  ]),
)
---

<div class="text-sm md:text-base w-full max-w-3xl mx-auto">
  {
    gamesByDate.map(([date, games]) => (
      <div>
        <p class="text-[#a8a8a8] py-1 border-t border-[#e4e4e4]">{date}</p>
        {games.map((game) => {
          switch (game.type) {
            case 'completed':
              return (
                <div class="border-t border-[#e4e4e4] py-2">
                  <div class="flex">
                    <div
                      class={`flex-1 flex ${
                        league === 'epl' ? 'flex-col-reverse' : 'flex-col'
                      }`}
                    >
                      <div class="flex items center py-2.5">
                        <EntityLink entity={game.awayTeam.entity}>
                          <Image
                            class="block w-6 h-6 object-contain mr-2.5"
                            src={game.awayTeam.logoUrl || fallbackIcon(league)}
                            alt={game.awayTeam.name}
                            width={50}
                            height={50}
                          />
                        </EntityLink>
                        <p
                          class:list={{
                            'flex-1': true,
                            'font-semibold':
                              game.awayTeam.score! > game.homeTeam.score!,
                          }}
                        >
                          <EntityLink entity={game.awayTeam.entity}>
                            {game.awayTeam.name}
                          </EntityLink>
                        </p>
                        <p
                          class:list={{
                            'font-semibold':
                              game.awayTeam.score! > game.homeTeam.score!,
                          }}
                        >
                          {game.awayTeam.score}
                        </p>
                      </div>
                      <div class="flex items center py-2.5">
                        <EntityLink entity={game.homeTeam.entity}>
                          <Image
                            class="block w-6 h-6 object-contain mr-2.5"
                            src={game.homeTeam.logoUrl || fallbackIcon(league)}
                            alt={game.homeTeam.name}
                            width={50}
                            height={50}
                          />
                        </EntityLink>
                        <p
                          class:list={{
                            'flex-1': true,
                            'font-semibold':
                              game.homeTeam.score! > game.awayTeam.score!,
                          }}
                        >
                          <EntityLink entity={game.homeTeam.entity}>
                            {game.homeTeam.name}
                          </EntityLink>
                        </p>
                        <p
                          class:list={{
                            'font-semibold':
                              game.homeTeam.score! > game.awayTeam.score!,
                          }}
                        >
                          {game.homeTeam.score}
                        </p>
                      </div>
                    </div>
                    <div class="w-28 text-center border-l border-[#e4e4e4] ml-5 mt-2.5">
                      <p class="my-0.5 first:font-semibold">
                        <EntityLink entity={game.entity}>
                          {game.completedGameStatus ?? 'Final'}
                        </EntityLink>
                      </p>
                    </div>
                  </div>
                </div>
              )
            case 'inProgress':
              return (
                <div class="border-t border-[#e4e4e4] py-2">
                  <div class="flex">
                    <div
                      class={`flex-1 flex ${
                        league === 'epl' ? 'flex-col-reverse' : 'flex-col'
                      }`}
                    >
                      <div class="flex items center py-2.5">
                        <EntityLink entity={game.awayTeam.entity}>
                          <Image
                            class="block w-6 h-6 object-contain mr-2.5"
                            src={game.awayTeam.logoUrl || fallbackIcon(league)}
                            alt={game.awayTeam.name}
                            width={50}
                            height={50}
                          />
                        </EntityLink>
                        <p class="flex-1">
                          <EntityLink entity={game.awayTeam.entity}>
                            {game.awayTeam.name}
                          </EntityLink>
                        </p>
                        <p>{game.awayTeam.score}</p>
                      </div>
                      <div class="flex items center py-2.5">
                        <EntityLink entity={game.homeTeam.entity}>
                          <Image
                            class="block w-6 h-6 object-contain mr-2.5"
                            src={game.homeTeam.logoUrl || fallbackIcon(league)}
                            alt={game.homeTeam.name}
                            width={50}
                            height={50}
                          />
                        </EntityLink>
                        <p class="flex-1">
                          <EntityLink entity={game.homeTeam.entity}>
                            {game.homeTeam.name}
                          </EntityLink>
                        </p>
                        <p>{game.homeTeam.score}</p>
                      </div>
                    </div>
                    <div class="w-28 text-center border-l border-[#e4e4e4] ml-5 mt-2.5">
                      {game.status?.split(', ').map((s) => (
                        <p class="my-0.5 first:font-semibold">{s}</p>
                      ))}
                    </div>
                  </div>
                </div>
              )
            case 'scheduled':
              return (
                <div
                  class={`border-t border-[#e4e4e4] py-2 flex ${
                    league === 'epl' ? 'flex-col-reverse' : 'flex-col'
                  }`}
                >
                  <div class="flex items center py-2.5">
                    <EntityLink entity={game.awayTeam.entity}>
                      <Image
                        class="block w-6 h-6 object-contain mr-2.5"
                        src={game.awayTeam.logoUrl || fallbackIcon(league)}
                        alt={game.awayTeam.name}
                        width={50}
                        height={50}
                      />
                    </EntityLink>
                    <p class="flex-1">
                      <EntityLink entity={game.awayTeam.entity}>
                        {game.awayTeam.name}
                      </EntityLink>
                    </p>
                    <p>
                      {game.time} {game.network && ` on ${game.network}`}
                    </p>
                  </div>
                  <div class="flex items center py-2.5">
                    <EntityLink entity={game.homeTeam.entity}>
                      <Image
                        class="block w-6 h-6 object-contain mr-2.5"
                        src={game.homeTeam.logoUrl || fallbackIcon(league)}
                        alt={game.homeTeam.name}
                        width={50}
                        height={50}
                      />
                    </EntityLink>
                    <p class="flex-1">
                      <EntityLink entity={game.homeTeam.entity}>
                        {game.homeTeam.name}
                      </EntityLink>
                    </p>
                  </div>
                </div>
              )
            default:
              return null
          }
        })}
      </div>
    ))
  }
</div>
