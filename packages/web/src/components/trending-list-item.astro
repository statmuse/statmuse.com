---
import Image from '@components/image.astro'
import type { HTMLAttributes } from 'astro/types'

export interface TrendingListItem {
  title: string
  html?: string
  uri: string
  images: string[]
  background: string
  foreground: string
  count: number
}

interface Props extends HTMLAttributes<'li'> {
  item: TrendingListItem
  index: number
  numbered?: boolean
  prominent?: boolean
  eager?: boolean
}

const { item, index, prominent } = Astro.props
const numbered = Astro.props.numbered ?? true
const eager = Astro.props.eager ?? false
---

<li {...Astro.props}>
  <a
    href={item.uri}
    class:list={{
      'grid grid-cols-3 text-gray-700': true,
      'pt-3': numbered,
      'pt-1': !numbered,
    }}
  >
    <div
      class:list={{
        'flex gap-3': true,
        'col-span-2': item.images.length === 1,
        'pl-3': !numbered,
      }}
    >
      {
        numbered ? (
          <p class="self-center w-10 flex-shrink-0 text-center">{index + 1}</p>
        ) : null
      }
      <p
        class:list={{
          'self-center leading-5': true,
          'text-xl': prominent,
        }}
        set:html={item.title}
      />
    </div>
    <div
      class:list={{
        'relative flex h-24': true,
        'ml-8 -mr-8': item.images.length > 1,
      }}
    >
      {
        item.images.map((image, index) => (
          <Image
            data-cy-illustration
            class:list={{
              'object-contain object-bottom': true,
              'absolute bottom-0 left-0 h-24 translate-x-1/2 z-[1]':
                index === 1,
            }}
            alt={item.title}
            src={image}
            width={450}
            height={450}
            loading={eager ? 'eager' : 'lazy'}
          />
        ))
      }
    </div>
  </a>
</li>
