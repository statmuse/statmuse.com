---
interface Props {
  id: string
}

const encodedHref = ''
const fbSvg = ''
const twitterSvg = ''
const url = 'https://statm.us/e/'
const linkSvg = ''
---

<div
  class="relative inline-block"
  onclick="event.stopPropagation();"
  data-dropdown
>
  <input id={Astro.props.id} type="checkbox" class="hidden peer" />
  <label for={Astro.props.id} class="cursor-pointer">
    <img
      class="w-[22px]"
      src="data:image/svg+xml;base64,"
      alt="share"
    />
  </label>
  <ul
    class="hidden peer-checked:block bg-white absolute overflow-hidden w-40 top-full border border-[#e4e4e4] shadow-lg"
  >
    <li class="mx-4 py-2 border-b border-[#e4e4e4]">
      <a
        href={`https://www.facebook.com/sharer/sharer.php?u=${encodedHref}`}
        target="_blank"
        rel="noopener"
        class="flex items-center cursor-pointer text-primary"
      >
        <div class="w-8 h-5 flex justify-center items-center pr-2 relative">
          <img class="max-h-full" alt="facebook" src={fbSvg} />
        </div>
        Facebook
      </a>
    </li>
    <li class="mx-4 py-2 border-b border-[#e4e4e4]">
      <a
        href={`http://twitter.com/share?url=${encodedHref}`}
        target="_blank"
        rel="noopener"
        class="flex items-center cursor-pointer text-primary"
      >
        <div class="w-8 h-5 flex justify-center items-center pr-2 relative">
          <img class="max-h-full" alt="twitter" src={twitterSvg} />
        </div>
        Twitter
      </a>
    </li>
    <li class="mx-4 py-2">
      <a
        class="flex items-center cursor-pointer text-primary"
        data-share-url={url}
      >
        <div class="w-8 h-5 flex justify-center items-center pr-2 relative">
          <img class="max-h-full" src={linkSvg} alt="share" />
        </div>
        Copy Link
      </a>
      <input
        class="absolute right-[99999px]"
        type="text"
        value={url}
        readonly
      />
    </li>
  </ul>
</div>
<script>
  // close dropdown when clicking outside
  window.addEventListener('click', () => {
    document.querySelectorAll('[data-dropdown] input:checked').forEach((el) => {
      ;(el as HTMLInputElement).checked = false
    })
  })
  // clear previous dropwdown when clicking on another share button
  document.querySelectorAll('[data-dropdown] label').forEach((el) => {
    el.addEventListener('click', () => {
      const input = document.querySelector(
        '[data-dropdown] input:checked'
      ) as HTMLInputElement | null
      if (input) {
        input.checked = false
      }
    })
  })
  // copy clipboard bind & event handler
  document.querySelectorAll('[data-share-url]').forEach((el) => {
    el.addEventListener('click', async () => {
      ;(el.nextSibling as HTMLInputElement).select()
      try {
        await navigator.clipboard.writeText(
          (el as HTMLElement).dataset.shareUrl || ''
        )
      } catch (err) {}
    })
  })
</script>
