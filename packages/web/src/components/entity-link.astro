---
import { getUrlForEntity, type GameraEntity } from '@statmuse/core/gamera'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  entity?: GameraEntity
}

const { entity, ...rest } = Astro.props
// const entityDisplay = get(entity, 'display')
const url = entity && entity.id ? getUrlForEntity(entity) : undefined
// const title = children !== entityDisplay ? entityDisplay : ''
const title = ''
---

{
  url ? (
    <a {...rest} {title} href={url}>
      <slot />
    </a>
  ) : (
    <span {...rest} class={''}>
      <slot />
    </span>
  )
}
