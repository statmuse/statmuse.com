---
import TrendingListItem from '@components/trending-list-item.astro'
import Panel from '@components/panel.astro'
import Icon from '@components/icon.svelte'
import { type TrendingListItem as Item } from 'src/types'

interface Props {
  items: Item[]
  title: string
  moreUrl: string
  eager?: boolean
  prominent?: boolean
}

const { items, title, eager, moreUrl, prominent } = Astro.props
---

<Panel {title}>
  {
    items?.length ? (
      <>
        <ol class="-mx-3 mt-1 list-none divide-y divide-gray-6">
          {items.slice(0, 5).map((item, index) => (
            <TrendingListItem {item} {index} {prominent} {eager} />
          ))}
          {items.length > 5 ? (
            <li class="pt-3 pb-1">
              <a
                href={moreUrl}
                class="flex items-center justify-center gap-2 text-gray-5"
              >
                See more <Icon name="dropdown" class="w-5 h-5" />
              </a>
            </li>
          ) : (
            <li class="pt-3 pb-1" />
          )}
        </ol>
      </>
    ) : (
      <div class="h-96">
        <div class="h-full w-full flex justify-center items-center text-center text-opacity-65">
          <div>
            <p>Gathering data</p>
            <p>Check back later</p>
          </div>
        </div>
      </div>
    )
  }
</Panel>
