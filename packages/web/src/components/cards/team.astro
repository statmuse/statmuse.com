---
import Image from '@components/image.astro'
import type { TeamCard } from '@statmuse/core/gamera'

interface Props {
  card: TeamCard
}
const { card } = Astro.props
---

<div
  class="flex flex-wrap rounded-2xl py-5 px-2.5 gap-y-5"
  style={{
    backgroundColor: card.teams[0].colors.backgroundColor,
    color: card.teams[0].colors.foregroundColor,
  }}
>
  {
    card.teams.map((team) => (
      <div class="w-1/3 text-center">
        <div class="w-16 h-16 rounded-full bg-white flex items-center justify-center mx-auto">
          <Image
            class="w-[70%] h-[70%] object-contain"
            src={team.logoImageUrl}
            alt={team.nickname}
            width={100}
            height={100}
            loading="eager"
          />
        </div>
        <p class="text-3xl mt-2">{team.statDisplayValue}</p>
      </div>
    ))
  }
</div>
