---
import Image from '@components/image.astro'
import Panel from '@components/panel.astro'
import type { GameraEntity, PlayerCard } from '@statmuse/core/gamera'

interface Props {
  card: PlayerCard
  title?: string
  href?: string
  entity?: GameraEntity
}

const lastName = (s: string) => {
  const names = s.split(' ')
  return names[names.length - 1]
}

const subTitle = (stat: string) => {
  switch (stat) {
    // NBA
    case 'mostPointsPerGame':
      return 'PPG'
    case 'mostReboundsPerGame':
      return 'RPG'
    case 'mostAssistsPerGame':
      return 'APG'
    // NFL
    case 'mostPassingYards':
      return 'PASS'
    case 'mostRushingYards':
      return 'RUSH'
    case 'mostReceivingYards':
      return 'REC'
    // NHL
    case 'mostGoals':
      return 'G'
    case 'mostAssists':
      return 'A'
    case 'bestPlusMinus':
      return '+/-'
    // EPL
    case 'mostGoals':
      return 'G'
    case 'mostAssists':
      return 'A'
    case 'mostCleanSheets':
      return 'CS'
    default:
      return ''
  }
}

const { card, title, href, entity } = Astro.props
---

<Panel
  {title}
  {href}
  {entity}
  background={card.players[0].colors?.backgroundColor ?? '#FFF'}
  foreground={card.players[0].colors?.foregroundColor ?? '#000'}
>
  <a {href} class="no-underline text-inherit hover:no-underline">
    <div class="flex">
      {
        card?.players.map((player, i) => (
          <div class="text-center w-1/3 h-52 flex flex-col justify-between items-center -mb-2">
            <div class="mt-3">
              {player.stat && <p>{subTitle(player.stat)}</p>}
              <h3 class="text-2xl">{player.statDisplayValue}</h3>
              {player.entity ? (
                <p class="uppercase text-xs tracking-[0.07rem]">
                  {lastName(player.entity.display)}
                </p>
              ) : null}
            </div>
            <Image
              class="h-32"
              style={{
                maxWidth: 'initial',
                width: 'initial',
                zIndex: 3 - i,
              }}
              src={player.imageUrl}
              alt={player.entity?.display ?? 'Player'}
              width={500}
              height={500}
              loading="eager"
            />
          </div>
        ))
      }
    </div>
  </a>
</Panel>
