---
import Layout from '@layouts/base.astro'
import type { Metadata } from '@lib/meta'

interface Props {
  meta?: Metadata
  title: string
  prefixPath: string
  pages: {
    href: string
    title: string
  }[]
  enableAdBanner?: boolean
}

const { meta, prefixPath, pages, title, ...rest } = Astro.props
---

<Layout
  {meta}
  colors={{ foreground: '#fff', background: '#00c1d8' }}
  hero={{ content: title }}
  navProps={{
    href: () => '',
    selected: 'examples',
    links: [
      {
        text: 'Examples',
        param: 'examples',
        href: '/product/examples',
      },
      {
        text: 'Data Coverage',
        param: 'data',
        href: '/product/data',
      },
    ],
  }}
  {...rest}
>
  <slot />
</Layout>
