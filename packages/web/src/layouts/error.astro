---
import MainLayout from '@layouts/main.astro'
import Header from '@components/header.astro'
import Hero from '@components/hero.astro'
import type { Metadata } from '@lib/meta'

interface Props {
  meta?: Metadata
  errorMessage: string
  image: { imageUrl: string; imageAlt: string }
}

const { errorMessage, image } = Astro.props
---

<MainLayout
  {...Astro.props}
  colors={{ foreground: '#fff', background: '#0086ff' }}
>
  <Header />
  <Hero content={errorMessage} {...image} />
  <slot />
</MainLayout>
