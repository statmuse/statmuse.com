---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  id: string
  name: string
  checked?: boolean
}

const { id, name, checked, ...rest } = Astro.props
---

<div {...rest}>
  <input class="absolute opacity-0" type="radio" {id} {name} {checked} />
  <slot />
</div>
