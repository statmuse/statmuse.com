---
import Hero from '@components/hero.astro'
import Image from '@components/image.astro'
import Panel from '@components/panel.astro'
import Layout from '@layouts/base.astro'
import { Caching } from '@lib/caching'

// export const prerender = true

const affiliations = [
  { logo: Astro.url.origin + '/affiliations/disney.png', alt: 'disney' },
  { logo: Astro.url.origin + '/affiliations/google.svg', alt: 'google' },
  { logo: Astro.url.origin + '/affiliations/nflpa.png', alt: 'nflpa' },
]

Caching.swr(Astro)

const stats = [
  { key: 'Brand Impressions', value: '2B+' },
  { key: 'Web Pageviews', value: '200M+' },
  { key: 'Unique Users', value: '25M+' },
  { key: 'Muse Network Followers', value: '1.5M+' },
]
---

<Layout
  meta={{
    title: 'About',
    description:
      'StatMuse, a creative technology company, is the leader in conversational AI for sports. The company was founded in 2014 by two lifelong friends and is backed by Disney, Google, Techstars Ventures, Greycroft, the NFL Players Association and NBA Commissioner Emeritus, David Stern.',
  }}
  colors={{ foreground: '#fff', background: '#00c1d8' }}
  enableAdBanner={false}
  renderRightColumn={false}
>
  <Hero content="Muse on." />
  <div
    class="px-0 sm:px-3 md:px-6 mb-12 md:mb-16 w-full mx-auto md:text-xl space-y-[1em]"
  >
    <p>
      StatMuse is the largest artificial intelligence media company in the world
      for sports and finance.
    </p>
    <p>
      Our technology platform provides instant answers to trillions of sports
      and finance questions, turning every search into personalized content with
      deep historical data and world class art.
    </p>
    <p>
      Search sports stats, scores, bios, betting, fantasy and more — from live
      games all the way back to inaugural seasons — for the NBA, NFL, NHL, MLB,
      PGA and European football. For finance, search stock prices, FX pairs,
      Bitcoin returns and more — from real-time through history.
    </p>
    <p>
      Founded by two life-long friends in 2014, StatMuse serves tens of millions
      of users with billions of brand impressions worldwide. Backed by Disney,
      Google, Allen & Company, the NFL Players Association and others, we're
      building the first Intelligence and Entertainment Network for sports and
      finance — the only one powered by AI and a decentralized creator network.
    </p>
  </div>
  <div class="w-full md:w-[50vw] text-center mx-auto mb-12 md:mb-16">
    <h2 class="text-gray-5 font-semibold">
      <span class="overview-quote-body md:text-3xl mr-[1.5em]">
        Sports is, by itself, the international language, but StatMuse has taken
        a giant leap forward, transforming sports statistics into meaningful,
        storytelling prose.
      </span>
      <span class="text-sm md:text-base whitespace-nowrap">
        - David J. Stern, NBA Commissioner 1984-2014
      </span>
    </h2>
  </div>
  <div class="flex gap-3 flex-wrap">
    <Panel class="flex-1 shrink-0 basis-72">
      <h3 class="mb-2">
        <span class="font-semibold">StatMuse Stats</span> (First Half of 2024)
      </h3>
      <div
        class:list={{
          'grid grid-cols-4 gap-3 py-3 leading-snug': true,
        }}
      >
        {
          stats.map(({ key, value }) => (
            <div class="flex flex-col items-center">
              <div class="whitespace-nowrap mb-[2px]">{value}</div>
              <div class="font-light text-sm opacity-80 text-center leading-[1.1] ">
                {key}
              </div>
            </div>
          ))
        }
      </div>
    </Panel>
    <Panel class="flex-1 shrink-0 basis-72" title="Strategic Investors">
      <div class="flex gap-3 flex-wrap py-3">
        {
          affiliations.map((affiliate) => (
            <Image
              class="object-contain w-20 md:w-28  mx-auto"
              src={affiliate.logo}
              alt={affiliate.alt}
              width={300}
              height={300}
            />
          ))
        }
      </div>
    </Panel>
  </div>
</Layout>
