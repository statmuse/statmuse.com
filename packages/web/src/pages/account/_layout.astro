---
import TabbedLayout from '@layouts/tabbed.astro'
import type { Metadata } from '@lib/meta'

interface Props {
  meta?: Metadata
  prefixPath: string
}

const { meta, prefixPath } = Astro.props

const pages = [
  {
    href: '/account/history',
    title: 'History',
  },
  {
    href: '/account/settings',
    title: 'Settings',
  },
]
---

<TabbedLayout {meta} title="Manage your account." {prefixPath} {pages}>
  <slot />
</TabbedLayout>
